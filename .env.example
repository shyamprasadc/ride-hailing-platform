# Server Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1
CORS_URL="*"

# Database
DATABASE_URL="postgresql://postgres:P%40ssword123%23@localhost:5432/ride_hailing?schema=public"

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT
JWT_SECRET=super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_SECRET=refresh-token-secret
REFRESH_TOKEN_EXPIRES_IN=7d

# New Relic
NEW_RELIC_LICENSE_KEY=new-relic-license-key
NEW_RELIC_APP_NAME=ride-hailing-backend
NEW_RELIC_LOG_LEVEL=info
NEW_RELIC_ENABLED=true

# Payment Service Provider (PSP)
PSP_PROVIDER=razorpay
RAZORPAY_KEY_ID=razorpay-key-id
RAZORPAY_KEY_SECRET=razorpay-key-secret
STRIPE_SECRET_KEY=stripe-secret-key
STRIPE_WEBHOOK_SECRET=stripe-webhook-secret

# Maps API
GOOGLE_MAPS_API_KEY=google-maps-api-key

# WebSocket
WS_PORT=3001
WS_PATH=/socket.io

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Ride Matching
DRIVER_SEARCH_RADIUS_KM=5
MAX_DRIVER_SEARCH_ATTEMPTS=3
RIDE_MATCHING_TIMEOUT_MS=30000

# Location Updates
LOCATION_BATCH_SIZE=100
LOCATION_BATCH_INTERVAL_MS=10000

# CORS
CORS_ORIGIN=http://localhost:5173

# Surge Pricing
SURGE_CALCULATION_INTERVAL_MS=60000
MAX_SURGE_MULTIPLIER=3.0

# Monitoring
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true
