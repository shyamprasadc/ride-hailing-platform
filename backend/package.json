{
  "name": "ride-hailing-platform",
  "version": "1.0.0",
  "description": "Ride Hailing Platform Backend built with Node.js, TypeScript, Express, and Prisma",
  "main": "src/server.ts",
  "scripts": {
    "start": "npm run build && npm run serve",
    "serve": "node -r dotenv/config build/server.js",
    "build": "npm run clean && npm run build-ts",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "watch-node": "nodemon -r dotenv/config build/server.js",
    "clean": "rimraf ./build",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "eslint": "eslint . --ext .js,.ts",
    "upgrade": "npm update --save-dev && npm update --save"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:shyamprasadc/node-ts-prisma-sql-boilerplate.git"
  },
  "keywords": [
    "node.js",
    "boilerplate",
    "typescript",
    "express",
    "postgresql",
    "prisma",
    "sql",
    "es6",
    "eslint",
    "prettier"
  ],
  "author": {
    "name": "Shyam Prasad",
    "email": "shyamprasadc1995@gmail.com"
  },
  "license": "MIT",
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {
    "@prisma/client": "^6.18.0",
    "bcrypt": "^5.0.1",
    "cors": "^2.8.5",
    "express": "^4.17.2",
    "helmet": "^5.0.2",
    "joi": "^17.6.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "winston": "^3.5.0",
    "winston-daily-rotate-file": "^4.6.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/helmet": "^4.0.0",
    "@types/joi": "^17.2.3",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/lodash": "^4.14.178",
    "@types/node": "^20.19.23",
    "@types/winston": "^2.4.4",
    "colors": "^1.4.0",
    "concurrently": "^7.0.0",
    "dotenv": "^14.3.2",
    "eslint": "^8.8.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "prisma": "^6.18.0",
    "ts-node": "^10.4.0",
    "tslint": "^6.1.3",
    "typescript": "^5.9.3"
  }
}
